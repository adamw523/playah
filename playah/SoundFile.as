package playah {	import flash.media.Sound;	import flash.media.SoundChannel;	import flash.net.URLRequest;	import flash.events.Event;	public class SoundFile {		private var sound:Sound;		private var soundChannel:Object = null;		private var pausePosition:int = 0;				private function stopListener(e:Event):void {			soundChannel = null;		}				public function SoundFile(url:String):void {			sound = new Sound();			sound.load(new URLRequest(url));		}				public function play():void {			if(!soundChannel) {				soundChannel = sound.play(pausePosition);				soundChannel.addEventListener(Event.SOUND_COMPLETE, stopListener);			}		}				public function pause():void {			if(soundChannel) {				pausePosition = soundChannel.position;				soundChannel.stop();				soundChannel = null;			}		}				public function stop():void {			pausePosition = 0;			if(soundChannel) {				soundChannel.stop();				soundChannel = null;			}		}							}}